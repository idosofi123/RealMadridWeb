@model RealMadridWebApp.Models.Match

@{
    ViewData["Title"] = "Details";
}

<h1>Match Details</h1>

<div>
    <h4>Match</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Competition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Competition.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.isAwayMatch)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isAwayMatch)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeGoals)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeGoals)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AwayGoals)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AwayGoals)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="PurchaseTicket" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-success">Purchase a Ticket</button>
    </form>
    @if (TempData["Success"] != null) {
        <div class="text-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null) {
        <div class="text-danger">@TempData["Error"]</div>
    }
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
