<link rel="stylesheet" href="~/css/Match/Create.css" />

@model RealMadridWebApp.Models.Match

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-xs-10 col-md-8 col-lg-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionId" class="control-label"></label>
                <select asp-for="CompetitionId" class="form-control" asp-items="ViewBag.CompetitionId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isAwayMatch" /> @Html.DisplayNameFor(model => model.isAwayMatch)
                </label>
            </div>
            <div class="horizontalForm">
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input id="dateInput" asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group goalField">
                    <label asp-for="HomeGoals" class="control-label"></label>
                    <input id="homeGoalInput" asp-for="HomeGoals" class="form-control" />
                    <span asp-validation-for="HomeGoals" class="text-danger"></span>
                </div>
                <div class="form-group goalField">
                    <label asp-for="AwayGoals" class="control-label"></label>
                    <input id="awayGoalInput" asp-for="AwayGoals" class="form-control" />
                    <span asp-validation-for="AwayGoals" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        @if (ViewBag.Error != null) {
            <div class="text-danger">@ViewBag.Error</div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Match/Create.js"></script>
}

